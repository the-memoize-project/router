{
  "name": "@the-memoize-project/router",
  "version": "0.2.0",
  "description": "Memoize Router: Declarative routing system for The Memoize Project. A lightweight, zero-dependency router for web components with reactive navigation and nested routing support.",
  "keywords": [
    "router",
    "routing",
    "web-components",
    "custom-elements",
    "declarative",
    "reactive",
    "framework",
    "typescript",
    "javascript",
    "frontend",
    "spa",
    "navigation",
    "memoize",
    "memoize-router",
    "zero-dependencies",
    "lightweight",
    "cloudflare-workers",
    "edge-computing",
    "worker"
  ],
  "author": "The Memoize Project Contributors",
  "license": "MIT",
  "homepage": "https://github.com/the-memoize-project/router#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/the-memoize-project/router.git"
  },
  "bugs": {
    "url": "https://github.com/the-memoize-project/router/issues"
  },
  "type": "module",
  "main": "dist/router.cjs",
  "module": "dist/router.js",
  "types": "types.d.ts",
  "source": "src/index.js",
  "exports": {
    "./browser": {
      "types": "./types.d.ts",
      "import": "./dist/browser.js",
      "require": "./dist/browser.cjs"
    },
    "./worker": {
      "types": "./types.d.ts",
      "import": "./dist/worker.js",
      "require": "./dist/worker.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "packages",
    "types.d.ts",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "test": "vitest --coverage",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@happy-dom/global-registrator": "^20.0.11",
    "@rollup/plugin-terser": "^0.4.4",
    "@vitest/coverage-v8": "4.0.16",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
